{
  "private": true,
  "devDependencies": {
    "eslint-config-readable": "^1.12.4",
    "lerna": "^2.11.0",
    "lerna-changelog": "^0.7.0",
    "lint-staged": "^7.1.0",
    "readable-cli": "^0.4.0",
    "stylelint-config-readable": "^1.2.0"
  },
  "scripts": {
    "clean": "lerna clean --yes && rimraf node_modules",
    "update": "yarn upgrade-interactive --latest",
    "test": "lerna run test",
    "pretest": "lerna run prepack && lerna link",
    "precommit": "lint-staged",
    "prepack": "lerna run prepack",
    "publish": "npm run prepack && lerna publish"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint --quiet",
    "*.css": "stylelint --quiet"
  },
  "workspaces": [
    "packages/*"
  ]
}
