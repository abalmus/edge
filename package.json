{
  "private": true,
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-readable": "^1.14.0",
    "flow-bin": "^0.74.0",
    "lerna": "^2.11.0",
    "lerna-changelog": "^0.7.0",
    "lint-staged": "^7.2.0",
    "prettier": "^1.13.5",
    "readable-cli": "^0.4.0",
    "stylelint": "^9.2.1",
    "stylelint-config-readable": "^1.2.1"
  },
  "scripts": {
    "clean": "lerna clean --yes && rimraf node_modules",
    "update": "ncu -ua && lerna exec ncu -- -ua",
    "test": "lerna run test",
    "pretest": "lerna run prepack && lerna link",
    "precommit": "lint-staged",
    "prepack": "lerna run prepack",
    "publish": "npm run prepack && lerna publish"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint --quiet",
    "*.css": "stylelint --quiet"
  },
  "workspaces": [
    "packages/*"
  ]
}
